<interface>
  <!-- interface-name interface_v4.ui -->
  <requires lib="gio" version="2.0"/>
  <requires lib="gtk" version="4.14"/>
  <requires lib="libadwaita" version="1.5"/>
  <object class="AdwApplicationWindow" id="window">
    <property name="content">
      <object class="AdwNavigationView">
        <child>
          <object class="AdwNavigationPage">
            <property name="child">
              <object class="AdwToolbarView">
                <property name="content">
                  <object class="GtkScrolledWindow">
                    <child>
                      <object class="GtkFlowBox" id="flowbox">
                        <property name="margin-bottom">12</property>
                        <property name="margin-end">12</property>
                        <property name="margin-start">12</property>
                        <property name="margin-top">12</property>
                        <property name="max-children-per-line">2</property>
                        <property name="min-children-per-line">1</property>
                        <property name="selection-mode">none</property>
                        <child>
                          <object class="GtkFlowBoxChild" id="fbc1">
                            <property name="child">
                              <object class="GtkBox" id="vbox1">
                                <property name="orientation">vertical</property>
                                <property name="spacing">15</property>
                                <child>
                                  <object class="AdwPreferencesGroup">
                                    <property name="title">Recognize songs</property>
                                    <child>
                                      <object class="AdwActionRow">
                                        <property name="title">Recognize from file</property>
                                        <child>
                                          <object class="GtkButton">
                                            <property name="icon-name">document-open</property>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="AdwPreferencesRow">
                                        <property name="activatable">False</property>
                                        <property name="child">
                                          <object class="GtkSpinner">
                                            <property name="spinning">True</property>
                                          </object>
                                        </property>
                                        <property name="selectable">False</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="AdwSwitchRow">
                                        <property name="active">True</property>
                                        <property name="title">Recognize from microphone</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="label">Shazam servers are not reachable, are you connected?</property>
                                        <property name="margin-top">5</property>
                                        <attributes>
                                          <attribute name="weight" value="medium"/>
                                          <attribute name="foreground" value="#a4a400000000"/>
                                        </attributes>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="AdwPreferencesGroup">
                                    <property name="title">Recognition results</property>
                                    <child>
                                      <object class="AdwPreferencesRow">
                                        <child>
                                          <object class="GtkBox">
                                            <property name="orientation">vertical</property>
                                            <child>
                                              <object class="GtkImage"/>
                                            </child>
                                            <child>
                                              <object class="GtkLabel" id="recognized_song_name">
                                                <property name="label">Artist - Song name</property>
                                                <property name="selectable">True</property>
                                                <attributes>
                                                  <attribute name="weight" value="bold"/>
                                                </attributes>
                                              </object>
                                            </child>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="AdwActionRow">
                                        <property name="title">Search on YouTube</property>
                                        <child>
                                          <object class="GtkButton">
                                            <property name="icon-name">edit-find</property>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </property>
                            <property name="focusable">False</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkFlowBoxChild" id="fcb2">
                            <property name="child">
                              <object class="GtkBox" id="vbox2">
                                <property name="orientation">vertical</property>
                                <property name="spacing">15</property>
                                <child>
                                  <object class="AdwPreferencesGroup">
                                    <property name="title">Audio input</property>
                                    <child>
                                      <object class="AdwComboRow"/>
                                    </child>
                                    <child>
                                      <object class="AdwSwitchRow"/>
                                    </child>
                                    <child>
                                      <object class="AdwPreferencesRow"/>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="AdwPreferencesGroup">
                                    <property name="header-suffix">
                                      <object class="GtkMenuButton">
                                        <property name="icon-name">preferences-system</property>
                                        <property name="menu-model">history_menu_model</property>
                                      </object>
                                    </property>
                                    <property name="title">Recognition history</property>
                                    <child>
                                      <object class="AdwPreferencesRow">
                                        <child>
                                          <object class="GtkTreeView"/>
                                        </child>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="AdwPreferencesRow">
                                        <child>
                                          <object class="GtkButton">
                                            <property name="action-name">navigation.push</property>
                                            <property name="action-target">'favourites_tag'</property>
                                            <property name="label">View favourites</property>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </property>
                            <property name="focusable">False</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
                <child type="top">
                  <object class="AdwHeaderBar">
                    <child type="end">
                      <object class="GtkMenuButton" id="menu_button">
                        <property name="icon-name">open-menu-symbolic</property>
                        <property name="menu-model">menu_model</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
            <property name="title">SongRec</property>
          </object>
        </child>
        <child>
          <object class="AdwNavigationPage">
            <property name="child">
              <object class="AdwToolbarView">
                <property name="content">
                  <object class="GtkTreeView"/>
                </property>
                <child type="top">
                  <object class="AdwHeaderBar"/>
                </child>
                <child type="bottom">
                  <object class="GtkActionBar">
                    <child>
                      <object class="GtkButton"/>
                    </child>
                  </object>
                </child>
              </object>
            </property>
            <property name="tag">favourites_tag</property>
            <property name="title">Favourites</property>
          </object>
        </child>
      </object>
    </property>
    <property name="default-height">497</property>
    <property name="default-width">977</property>
    <property name="icon-name">audio-x-generic</property>
    <property name="title">SongRec</property>
    <property name="visible">True</property>
  </object>
  <menu id="menu_model">
    <section id="menu_section">
      <item>
        <attribute name="action">show_notifications_action</attribute>
        <attribute name="label">Show notifications</attribute>
      </item>
      <item>
        <attribute name="action">win.mpris-setting</attribute>
        <attribute name="label">Enable MPRIS</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="action">win.show-about</attribute>
        <attribute name="label">About...</attribute>
      </item>
    </section>
  </menu>
  <object class="AdwAboutDialog" id="about_dialog">
    <property name="application-icon">audio-x-generic</property>
    <property name="application-name">SongRec</property>
    <property name="developer-name">Marin Moulinier - Fossplant.re</property>
    <property name="developers">Marin Moulinier https://moulinier.dev/
Contributors https://github.com/marin-m/SongRec/graphs/contributors</property>
    <property name="issue-url">https://github.com/marin-m/SongRec/issues</property>
    <property name="license-type">gpl-3-0</property>
    <property name="support-url">https://matrix.to/#/!DZgyxHTQHSssuGdiHl:matrix.org</property>
    <property name="translator-credits">SongRec translators https://github.com/marin-m/SongRec/tree/master/translations&gt;</property>
    <property name="version">0.5.0</property>
    <property name="website">https://songrec.fossplant.re/</property>
  </object>
  <menu id="history_menu_model">
    <item>
      <attribute name="action">export_to_csv</attribute>
      <attribute name="label">Export to CSV</attribute>
    </item>
    <item>
      <attribute name="action">delete_history</attribute>
      <attribute name="label">Delete history</attribute>
    </item>
  </menu>
</interface>
